<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/colorStatus</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="windowActionBar">true</item>
        <item name="titleTextColor">@color/colorText</item>
        <item name="materialButtonStyle">@style/buttonStyle</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextStyle</item>
        <item name="android:fastScrollStyle">@style/FastScrollStyle</item>
        <item name="android:fastScrollThumbDrawable">@drawable/scrollbar_thumb_drawable</item>
        <item name="android:fastScrollTrackDrawable">@drawable/scrollbar_track_drawable</item>
    </style>

    <style name="FastScrollStyle" parent="android:Widget.Material.FastScroll">
        <item name="android:minWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:padding">4dip</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="ActionBarTheme" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="android:tint">@color/colorBottomNavUnselected</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/activity_fade_in</item>
        <item name="android:windowExitAnimation">@anim/activity_fade_out</item>
    </style>

    <style name="ManagementTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">5dp</item>
        <item name="tabPaddingEnd">5dp</item>
        <item name="tabTextAppearance">@style/ManagementTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorText</item>
    </style>

    <style name="ManagementTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/colorBorder</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/button_color</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="materialThemeOverlay">@style/AccentButtonThemeOverlay</item>
        <item name="android:textAppearance">@style/AccentButtonTextStyle</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AccentButtonThemeOverlay" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorPrimaryLight</item>
    </style>

    <style name="AccentButtonTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_rounded_bg</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:windowAnimationStyle">@style/StyleDialogAnimation</item>
    </style>

    <style name="StyleDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_pop_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_pop_out</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="NegativeButtonStyle" parent="DialogButton"/>
    <style name="PositiveButtonStyle" parent="DialogButton"/>
    <style name="NeutralButtonStyle" parent="DialogButton"/>

    <style name="FragmentDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_pop_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_pop_out</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/TextInputLayoutOverlay</item>
        <item name="hintTextColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="colorOnSurface">@color/colorPrimaryLight</item>v
        <item name="boxBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextInputLayoutOverlay" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorPrimaryLight</item>
        <item name="colorError">@color/colorRed</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/snackbar_background</item>
        <item name="animationMode">fade</item>
    </style>

    <style name="SnackbarTextStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorSnackbarText</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
