<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" >

        <RelativeLayout
            android:id="@+id/stopButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="0dp"
            android:paddingStart="20dp"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false" >

            <ImageView
                android:id="@+id/stopButtonImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_button_stop"
                android:contentDescription="@string/iv_stop_button_desc"
                android:gravity="center" />

        </RelativeLayout>

        <Switch
            android:id="@+id/switchDisable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="Adhell" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/appIcon"
        android:text="Adhell"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/systemOrNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appName"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/appIcon"
        android:text="System"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/packName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/systemOrNot"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/appIcon"
        android:text="com.android.google"/>


</RelativeLayout>