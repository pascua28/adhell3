<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/blockUrlProviderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/deleteUrlProviderImageView"
        android:layout_margin="5dp"
        android:text="https://adaway.org/hosts.txt" />

    <TextView
        android:id="@+id/blockUrlCountTextView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blockUrlProviderTextView"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:singleLine="true"
        android:text="2597" />

    <CheckBox
        android:id="@+id/urlProviderCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/deleteUrlProviderImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toStartOf="@+id/urlProviderCheckBox"
        android:layout_centerVertical="true"
        android:contentDescription="@string/delete_url"
        app:tint="@color/colorAccent"
        android:src="@drawable/ic_delete" />

    <TextView
        android:id="@+id/lastUpdatedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/blockUrlProviderTextView"
        android:layout_toEndOf="@+id/blockUrlCountTextView"
        android:text="2017-06-30 16:00:00" />

</RelativeLayout>