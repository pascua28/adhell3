<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:title="@string/settings_fragment_title">

    <Preference
        android:key="delete_preference"
        android:summary="@string/delete_app_summary"
        android:title="@string/delete_app"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="backup_preference"
        android:summary="@string/backup_database_summary"
        android:title="@string/backup_database"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="restore_preference"
        android:summary="@string/restore_database_summary"
        android:title="@string/restore_database"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="clean_preference"
        android:summary="@string/clean_database_summary"
        android:title="@string/clean_database"
        app:iconSpaceReserved="false" />

    <com.fusionjack.adhell3.model.CustomSwitchPreference
        android:defaultValue="false"
        android:key="auto_update_preference"
        android:summary="@string/auto_update_summary"
        android:title="@string/auto_update_title"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="set_night_mode_preference"
        android:summary="@string/set_night_mode_summary"
        android:title="@string/set_night_mode"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="update_provider_preference"
        android:summary="@string/update_provider_summary"
        android:title="@string/update_provider_title"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="set_password_preference"
        android:summary="@string/set_password_summary"
        android:title="@string/set_password_title"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="allow_qstiles_lockscreen"
        android:summary="@string/qstiles_lockscreen_summary"
        android:title="@string/qstiles_lockscreen_title"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="restore_warning_dialog"
        android:summary="@string/restore_warning_summary"
        android:title="@string/restore_warning_title"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="revoke_storage_permission"
        android:summary="@string/revoke_storage_permission_summary"
        android:title="@string/revoke_storage_permission_title"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="create_logcat_preference"
        android:summary="@string/create_logcat_summary"
        android:title="@string/create_logcat_title"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="change_key_preference"
        android:summary="@string/change_key_summary"
        android:title="@string/change_key_title"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="about_preference"
        android:summary="@string/about_summary"
        android:title="@string/about_title"
        app:iconSpaceReserved="false" />
</PreferenceScreen>